import random


# %%
money = 100


# %%
print(money)


# %%
def fliping_coin_game(bet, guess):
    flip = random.randint(1, 2)
    global money
    print('Welcome to Heads or Tails')
    
    if flip == 1:
        rslt = 'HEADS'
        print('Outcome = Heads')
    else:
        rslt = 'TAILS'
        print('Outcome = Tails')
        
    if rslt == guess.upper():
        print("Congrats, you won")
        money += 1.5*bet
        print ("Your balance is " + str(money))
    
    else:
        print("Better luck next time")
        money -= bet
        print ("Your balance is " + str(money))
    


# %%
fliping_coin_game(10,"Heads")


# %%
print(money)


